- retro_panel.retro_cards.order('updated_at').each do |retro_card|
  .col-md-6.col-sm-12
    #retro_card.box{:style => "border-top-color : #{retro_panel.color}"}
      .box-header
        %span.badge{"data-original-title" => '3 Upvotes', "data-toggle" => 'tooltip'}
          3
          %i.fa.fa-thumbs-up
        .box-tools.pull-right
          %button.btn.btn-box-tool{"data-widget" => "remove"}
          = link_to delete_retro_card_path(retro_card), :method => :delete, class: 'btn btn-box-tool delete delete-default', remote: true do
            %i.fa.fa-times
      .box-body
        = retro_card.description
      .box-footer
        .box-tools.pull-right
          %button.btn.btn-box-tool{"data-original-title" => 'Upvote', 'data-toggle' => 'tooltip'}
            %i.fa.fa-thumbs-up.plus-one