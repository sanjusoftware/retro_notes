%section.content-header
  %h1.text-center
    %i.ion.ion-clipboard
    %span.editable
      = best_in_place @retro_board, :name
    %small.editable
      = best_in_place @retro_board.project, :name, path: retro_board_path(@retro_board), param: 'retro_board[project]'

    %span.pull-right.actions
      = link_to retro_board_path(@retro_board), :method => :delete, data: { confirm: 'There is no looking back. Once deleted, its deleted forever! Are you sure?' } do
        %i.fa.fa-trash-o
      %a#share_board_link{href: '#', 'data-clipboard-target' => 'board_link', :title => 'Copy board link'}
        #board_link.hide
          = retro_board_path(@retro_board)
        %i.fa.fa-share-alt
.row
  - @retro_board.retro_panels.each do |retro_panel|
    .col-md-4
      %h3.text-center{:style => "color : #{retro_panel.color}"}
        %i.fa.fa-hand-o-down
        %span.editable
          = best_in_place retro_panel, :name, path: retro_board_retro_panel_path(@retro_board, retro_panel)
        %span{:id => "retro_panel_head_#{retro_panel.id}"}
          = "(#{retro_panel.retro_cards.count})"
      .row
        .col-md-12.col-sm-12
          = form_for RetroCard.new, url: "/retro_boards/#{@retro_board.id}/retro_panels/#{retro_panel.id}", :remote => true, :html => {:class => 'form-horizontal'} do |f|
            .input-group
              = f.text_field :description, :class => 'form-control', :placeholder => "#{retro_panel.name} ...", :required => 'true', :id => "add_card_retro_panel_#{retro_panel.id}"
              %span.input-group-btn
                = f.submit '+', :class => 'btn btn-default btn-flat pull-right'
      %br
      .row
        %div{:id => "retro_panel_#{retro_panel.id}"}
          = render :partial => 'retro_boards/retro_panel', locals: {retro_board: @retro_board, retro_panel: retro_panel}
