.social-auth-links.text-center
  %p - OR -
  = link_to user_omniauth_authorize_path(:facebook), class: 'btn btn-block btn-social btn-facebook btn-flat' do
    %i.fa.fa-facebook
    Sign in using Facebook
  = link_to user_omniauth_authorize_path(:google_oauth2), class: 'btn btn-block btn-social btn-google-plus btn-flat' do
    %i.fa.fa-google-plus
    Sign in using Google+
  = link_to user_omniauth_authorize_path(:twitter), class: 'btn btn-block btn-social btn-twitter btn-flat' do
    %i.fa.fa-twitter
    Sign in using Twitter
